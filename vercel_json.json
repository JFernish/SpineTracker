{
  "version": 2,
  "name": "dynamic-spine-token-tracker",
  "functions": {
    "api/**/*.js": {
      "runtime": "nodejs18.x"
    }
  },
  "crons": [
    {
      "path": "/api/cron/update-tokens",
      "schedule": "*/15 * * * *"
    }
  ],
  "installCommand": "npm install",
  "buildCommand": "echo 'API functions ready'",
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ]
}
